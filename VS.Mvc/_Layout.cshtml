<!DOCTYPE html>

<html lang="@CultureInfo.CurrentCulture.TextInfo.CultureName">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@RenderSection("Title", true)</title>

    <!-- Google Analytics -->
    <script>
        (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-XXXXX-Y', 'auto');
        ga('send', 'pageview');
    </script>
    <!-- End Google Analytics -->



    <link rel="stylesheet" type="text/css" href="/css/app.css" asp-append-version="true" />

</head>
<body>
    <header>
        @RenderSection("Header", false)
    </header>
    <aside>
        @RenderSection("Aside", false)
    </aside>
    <main>
        @RenderBody()
    </main>


    <environment include="Development">
        <vc:host-picker></vc:host-picker>
        <vc:language-picker></vc:language-picker>
        @CultureInfo.CurrentCulture
        <br />
        @CultureInfo.CurrentUICulture
        <br />
        <vc:user-agent-info></vc:user-agent-info>
        <client-info>
            <strong slot="languageslabel">@sr["Client Languages"]</strong>
            <strong slot="languagelabel">@sr["Client Language"]</strong>
            <strong slot="agentlabel">@sr["User Agent"]</strong>
        </client-info>
        <vc:build-info></vc:build-info>
        <mini-profiler position="RenderPosition.BottomRight" />
    </environment>
    <footer>

    </footer>


    <script src="/js/webcomponentsjs/custom-elements-es5-adapter.js"></script>
    <script src="/js/webcomponentsjs/webcomponents-loader.js"></script>
    <script src="/js/app.js" type="text/javascript" asp-append-version="true"></script>

    @RenderSection("Scripts", false)
</body>
</html> 
