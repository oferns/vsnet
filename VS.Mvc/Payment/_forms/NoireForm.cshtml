@model NoireFormViewModel

<form action=@Model.FormAction method="POST" lang="en">

    <input type="hidden" name="shopperResultUrl" value=@Model.ReturnUrl>

    <strong>Payment Form</strong>

    <section>
        <label>Card Provider</label>
        <select name="paymentBrand">
            <option value="MASTER">Mastercard</option>
            <option value="VISA">Visa</option>
        </select>
    </section>

    <section>
        <label>Card Number</label>
        <input autocomplete="off" type="tel" name="card.number" placeholder="Card Number">
    </section>

    <section>
        <label>Expiry Date</label>
        <input autocomplete="off" type="tel" name="card.expiryMonth" placeholder="MM"> /
        <input autocomplete="off" type="tel" name="card.expiryYear" placeholder="YY">

    </section>

    <section>
        <label>Card holder</label>
        <input autocomplete="off" type="text" name="card.holder" placeholder="Card holder">
    </section>

    <section>
        <label>CVV</label>
        <input autocomplete="off" type="tel" name="card.cvv" placeholder="CVV">
    </section>


    <section>
        <button type="submit" name="pay">Pay now</button>
    </section>

</form>